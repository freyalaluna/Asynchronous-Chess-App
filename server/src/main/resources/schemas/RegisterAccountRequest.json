{
    "$id": "https://example.com/address.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "registerAccount",
    "description": "config object for POST request",
    "type": "object",
    "properties": {
      "requestType": {
        "description": "the object type should be registerAccount",
        "type": "string",
        "pattern": "^registerAccount$"
      },
      "username": {
        "description": "username of a user",
        "type": "string"
      },
      "email": {
        "description": "email address of a user",
        "type": "string",
        "pattern": "^S+@S+.S+$/"
      },
      "password": {
        "description": "a user's password",
        "type": "string"
      }
    },
    "required":["requestType", "username", "password"],
    "additionalProperties": true
  }
  